<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/start_ride_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_electric_scooter_purple"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/fieldOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/fieldTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fieldOne"
        android:text="TEST"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginTop="13dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/fieldThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fieldTwo"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="TEST"
        android:textSize="16sp" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/baseline_close_24"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/Start_Ride_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="12dp"
        android:drawableLeft="@drawable/baseline_play_arrow_24"
        android:text="@string/start"
        android:textSize="12sp"
        app:cornerRadius="50dp" />

</RelativeLayout>
